{
  "compilerOptions": {
    "strictNullChecks": true,
    "allowJs": true,
    "strict": true,
    "target": "ES6",
    "module": "CommonJS",
    "lib": [
      "ES6"
    ],
    "sourceMap": true,
    "outDir": "./dist",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationDir": "./dist/types",
    "baseUrl": ".",
    "types": ["jest", "node"],
    "typeRoots": ["./node_modules/@types"],
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "./index.ts"
  ],
  "exclude": [
    "node_modules", 
    "**/*.spec.ts"
  ],
}

